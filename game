def which_weapon(weapon_choice: int) -> int:
    while True:
        print()
        print("Choose your weapon:")
        print("[1] Gun ðŸ”«")   
        print("[2] Axe ðŸª“")
        print("[3] Umbrella â˜‚ï¸")
        print("[4] Hot Dog ðŸŒ­")
        print("[5] Bone ðŸ¦´")
        print("[6] Pencil âœï¸")
        try: 
            weapon_choice = int(input("> "))
            if weapon_choice == 1:
                weapon_choice == "Gun ðŸ”«"
                return "Weapon of choice: Gun ðŸ”«" 
            elif weapon_choice == 2:
                weapon_choice == "Axe ðŸª“"
                return "Weapon of choice: Axe ðŸª“"
            elif weapon_choice == 3:
                weapon_choice == "Umbrella â˜‚ï¸"
                return "Weapon of choice: Umbrella â˜‚ï¸" 
            elif weapon_choice == 4:
                weapon_choice == "Hot Dog ðŸŒ­"
                return "Weapon of choice: Hot Dog ðŸŒ­" 
            elif weapon_choice == 5:
                weapon_choice == "Bone ðŸ¦´"
                return "Weapon of choice: Bone ðŸ¦´" 
            elif weapon_choice == 6:
                weapon_choice == "Pencil âœï¸"
                return "Weapon of choice: Pencil âœï¸"
            else:
                print("Invalid choice of weapon.")
                print()
    
        except ValueError:
            print("Must enter number.")


def house_1(location: str) -> str:
    print()
    print("In House 1")
    print("Health: â¤ï¸  â¤ï¸  â¤ï¸")
    while True:
        print()
        print("Pick up key")
        print("[1] Pick up âœ”ï¸")
        print("[2] Leave âŒ")
        try:
            run = int(input("> "))
            if run == 1:
                break
            elif run == 2:
                print("Must pick up key")
        except ValueError:
            print("INVALID")

    print("Objective: Open chest")
    print()
    print("Guess the password to unlock the chest.")
    print("You will have 6 attempts to guessing before it self destructs.")
    print()


    
    print("_ _ _ _")
    print()
    word = "code"

    max_attempts = 6
    current_guesses_total = 0
    letters_in_word = []
    current_guess = ""

    while True:
        word = "code"
        current_guess = 0
        letters_in_word = len(word) * "_"

        print("HINT: the word starts with c and ends with e")
        print("Objective: Guess the word to unlock this door")
        print("This word is ", len(letters_in_word), " letters")
        print()

        while current_guesses_total < max_attempts:
            current_guess = input("Enter a letter: ")

            for i in range(0, len(word)):
                if word[i] == current_guess:
                    letters_in_word = letters_in_word[:
                    i] + current_guess + letters_in_word[
                    i + 1:]
                    print("LETTER!")
                    print(letters_in_word)

            if word == letters_in_word:
                print()
                print("Chest is empty")
                return which_house(location)
            current_guesses_total += 1

        print()
        print("The password was: ", word)
        print("Health: â¤  â¤  â¤")
        print("Game Over!")
        break


