def which_house(location: str) -> str:
    run = True
    while run == True:
        print("ðŸ  ðŸ  ðŸ ")
        print("[1] House #1")
        print("[2] House #2")
        print("[3] House #3")

        try: 
            choice = int(input("> "))
            if choice == 1:
                location == "house_1"
                house_1(location)
                run = False
            elif choice == 2:
                location == "house_2"
                house_2(location)
                run = False
            elif choice == 3:
                location == "house_3"
                house_3(location)
                run = False

        except ValueError:
            print("Must enter number.")


